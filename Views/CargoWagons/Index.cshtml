@{
    ViewData["Title"] = "Cargo Wagons";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>@Localizer["CargoWagonsTitle"]</h2>
            <p>@Localizer["CargoWagonsSelect"]</p>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-4 col-sm-6 mb-4">
            <div class="card h-100">
                <div id="carouselOpenWagons" class="carousel slide carousel-relative" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/images/newWagons/20250527_082221_024449.jpg" class="d-block w-100 carousel-image-wagon" alt="Открити вагони 1">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/Hat/csm_Tamns_254_für_Homepage_2c78c58a00.jpg" class="d-block w-100 carousel-image-wagon" alt="Открити вагони 3">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/wagons/tamns.png" class="d-block w-100 carousel-image-wagon" alt="Открити вагони 3">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/wagons/AAR.png" class="d-block w-100 carousel-image-wagon" alt="Открити вагони 3">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselOpenWagons" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselOpenWagons" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                    <div class="carousel-title-overlay">
                        <h5 class="card-title mb-0 carousel-title-text">Открити вагони</h5>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-6 mb-4">
