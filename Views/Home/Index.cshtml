@{
    ViewData["Title"] = "Home";
}
@* Debug: Current culture = @System.Globalization.CultureInfo.CurrentCulture.Name, UI Culture = @System.Globalization.CultureInfo.CurrentUICulture.Name *@
@* Debug: Localizer test = @Localizer["NavHome"] *@

<div id="imageCarousel" class="carousel slide carousel-small" data-ride="carousel">
    <div class="carousel-overlay-text">
        <h1 class="display-4 text-center carousel-text-overlay">@Localizer["HomeWelcome"]</h1>
        <h2 class="text-center carousel-text-overlay">@Localizer["HomeThankYou"]</h2>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="d-flex">
                <img src="~/images/Hat/csm_Smnps_193_Website_3b9d7cec71.jpg" class="d-block carousel-image-pair" alt="Image 1">
                <img src="~/images/Hat/csm_Smnps_194_OK_ef12d85d46.jpg" class="d-block carousel-image-pair" alt="Image 2">
            </div>
        </div>
        <div class="carousel-item">
            <div class="d-flex">
                <img src="~/images/Hat/csm_Tamns_254_für_Homepage_2c78c58a00.jpg" class="d-block carousel-image-pair" alt="Image 3">
                <img src="~/images/Hat/csm_Zagns_81m__Edelstahl_Druckgas_4d54dc0c78.jpg" class="d-block carousel-image-pair" alt="Image 4">
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-12">
            <p class="lead">
                @Localizer["HomeGoal"]
            </p>

            <h2 class="mt-4 mb-3">@Localizer["HomeProductRange"]</h2>
            
            <div class="row mb-4">
                <div class="col-md-7">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">@Localizer["HomeGoalDescriptionLi1"]</li>
                        <li class="list-group-item">@Localizer["HomeGoalDescriptionLi2"]</li>
                        <li class="list-group-item">@Localizer["HomeGoalDescriptionLi3"]</li>
                        <li class="list-group-item">@Localizer["HomeGoalDescriptionLi4"]</li>
                        <li class="list-group-item">@Localizer["HomeGoalDescriptionLi5"]</li>
                        <li class="list-group-item">@Localizer["HomeGoalDescriptionLi6"]</li>
                    </ul>
                </div>
                <div class="col-md-5">
                    <div id="wagonsCarousel" class="carousel slide carousel-wagons" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/images/wagons/AAR.png" class="d-block w-100" alt="AAR">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/wagons/bogie-w.png" class="d-block w-100" alt="Bogie">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/wagons/eanos-a.png" class="d-block w-100" alt="Eanos">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/wagons/falns-279.png" class="d-block w-100" alt="Falns 279">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/wagons/falns.png" class="d-block w-100" alt="Falns">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/wagons/rbnpss.png" class="d-block w-100" alt="Rbnpss">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/wagons/rens.png" class="d-block w-100" alt="Rens">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/wagons/smnps.png" class="d-block w-100" alt="Smnps">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/wagons/talns-174.png" class="d-block w-100" alt="Talns 174">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/wagons/tamns.png" class="d-block w-100" alt="Tamns">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/wagons/zans.png" class="d-block w-100" alt="Zans">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-12">
             <h2 class="mt-4 mb-3">@Localizer["HomePartners"]</h2>
             <div class="row mt-5 mb-4">
                <div class="col-md-6 mb-3">
                    <div class="card partner-card partner-onrail">
                        <div class="card-body text-center">
                            <a href="http://www.on-rail.com" target="_blank" class="partner-link">
                                <h5 class="card-title">On Rail Gesellschaft für Eisenbahnausrüstung und Zubehör mbH</h5>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="card partner-card partner-wls">
                        <div class="card-body text-center">
                            <a href="http://www.wls-moers.de/" target="_blank" class="partner-link">
                                <h5 class="card-title">WLS Waggon- und Lokreparatur-Service GmbH</h5>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="alert alert-info mt-4 mb-4 position-relative">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="alert-heading">@Localizer["HomeCertification"]</h4>
                        <p class="mb-0"><strong>@Localizer["HomeCertificationText"]</strong></p>
                        <a href="~/images/ktg-din-bg.jpg" target="_blank" class="btn btn-primary mt-2">@Localizer["HomeViewCertificate"]</a>
                    </div>
                    <img src="~/images/ktg-din-bg.jpg" alt="Sertifikat" class="img-cert">
                </div>
            </div>
        </div>
    </div>
</div>
