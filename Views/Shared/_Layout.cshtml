@using Microsoft.AspNetCore.Localization
@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCulture?.RequestCulture?.Culture?.Name ?? "bg";
}
<!DOCTYPE html>
<html lang="@currentCulture">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]|KTG EOOD</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div class="header-top d-flex justify-content-between align-items-center position-relative">
            <a class="header-logo" asp-controller="Home" asp-action="Index">
                @{
                    var logoFile = currentCulture switch
                    {
                        "bg" => "logo2.jpg",
                        "de" => "logo-en.jpg",
                        _ => "logo-en.jpg"
                    };
                }
                <img src="~/images/@logoFile" alt="logo" onerror="this.src='~/images/logo-en.jpg'">
            </a>
            <div class="language-selector">
                <ul class="list-unstyled mb-0">
                    <li class="d-inline-block p-2">
                        <form asp-controller="Language" asp-action="SetLanguage" method="post" style="display: inline;">
                            <input type="hidden" name="culture" value="bg" />
                            <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                            <button type="submit" class="language-link" style="background: none; border: none; padding: 0; cursor: pointer;">BG</button>
                        </form>
                    </li>
                    <li class="d-inline-block p-2">
                        <form asp-controller="Language" asp-action="SetLanguage" method="post" style="display: inline;">
                            <input type="hidden" name="culture" value="en" />
                            <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                            <button type="submit" class="language-link" style="background: none; border: none; padding: 0; cursor: pointer;">EN</button>
                        </form>
                    </li>
                    <li class="d-inline-block p-2">
                        <form asp-controller="Language" asp-action="SetLanguage" method="post" style="display: inline;">
                            <input type="hidden" name="culture" value="de" />
                            <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                            <button type="submit" class="language-link" style="background: none; border: none; padding: 0; cursor: pointer;">DE</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow navbar-sticky">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["NavHome"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="AboutUs" asp-action="AboutUs">@Localizer["NavAboutUs"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="CargoWagons" asp-action="Index">@Localizer["NavCargoWagons"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Parts" asp-action="Parts">@Localizer["NavParts"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Contacts" asp-action="Contacts">@Localizer["NavContacts"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="sendRequest" asp-action="sendRequest">@Localizer["NavSendRequest"]</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="content-wrapper">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row footer-row">
                <div class="col-md-4 footer-col">
                    <p class="footer-text">KTG EOOD</p>
                    <p class="footer-text">@Localizer["FooterAddress"]: 8000 Burgas Tovarna Gara "Vladimir Pavlov"</p>
                    <p class="footer-text">Severna Promischlena Zona, Postfach 553</p>
                </div>
                <div class="col-md-4 footer-col">
                    <p class="footer-text">@Localizer["FooterTel"]: +359 56 950 618</p>
                    <p class="footer-text">@Localizer["FooterMob"]: +359 886 322 311</p>
                    <p class="footer-text">@Localizer["FooterFax"]: +359 56 950 615</p>
                    <p class="footer-text">@Localizer["FooterEmail"]: office@ktg.bg</p>
                </div>
                <div class="col-md-4 footer-col">
                    <p class="footer-text">Copyrights &copy;  @DateTime.UtcNow.Year - KTG EOOD</p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
