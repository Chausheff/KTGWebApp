@{
    ViewData["Title"] = "Contacts";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="h2 mb-2">@Localizer["ContactsTitle"]</h1>
        </div>
    </div>
    <div class="row contacts-row">
        <div class="col-md-6 contacts-text">
            <p class="mb-1">@Localizer["FooterAddress"]: @Localizer["ContactsAddressBurgas"]</p>
            <p class="mb-1">@Localizer["FooterTel"] @Localizer["ContactsTelBurgas"]</p>
            <p class="mb-1">@Localizer["FooterMob"] @Localizer["ContactsMobBurgas"]</p>
            <p class="mb-1">@Localizer["FooterFax"]: @Localizer["ContactsFaxBurgas"]</p>
            <p class="mb-0">@Localizer["FooterEmail"]: @Localizer["ContactsEmail"]</p>
        </div>
        <div class="col-md-6 contacts-map">
            <div class="map-container">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d4273.800114579353!2d27.451683394133607!3d42.50360740699394!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40a694a1cfd66abd%3A0x4de0b8411923e65c!2z0KLRgNCw0L3RgdCy0LDQs9C-0L0g0JDQlA!5e1!3m2!1sbg!2sbg!4v1763406209271!5m2!1sbg!2sbg" width="100%" height="100%" class="map-iframe" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
    <div class="row contacts-row">
        <div class="col-md-6 contacts-text">
            <p class="mb-1">@Localizer["FooterAddress"]: @Localizer["ContactsAddressSofia"]</p>
            <p class="mb-1">@Localizer["FooterTel"] @Localizer["ContactsTelSofia"]</p>
