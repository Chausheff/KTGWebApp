            <p class="mb-0">@Localizer["FooterEmail"]: @Localizer["ContactsEmail"]</p>
        </div>
        <div class="col-md-6 contacts-map">
            <div class="map-container">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1261.996307090715!2d23.257855369510324!3d42.680285325435165!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40aa9b2f22c8a471%3A0x675b171cc9375e94!2skv.%20Ovcha%20kupel%2C%20ul.%20%22Maestro%20Kanev%22%2057%2C%201618%20Sofia%2C%20Bulgaria!5e1!3m2!1sen!2sus!4v1763406410973!5m2!1sen!2sus" width="600" height="450" class="map-iframe" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</div>

