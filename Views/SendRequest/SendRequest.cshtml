@{
    ViewData["Title"] = "Send Request";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Изпрати запитване</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <form action="mailto:office@ktg.bg" method="post" enctype="text/plain">
                Name:<br>
                <input type="text" name="name" required><br>
                E-mail:<br>
                <input type="text" name="mail" required><br>
                Comment:<br>
                <textarea name="comment" cols="30" rows required></textarea><br><br>    
                <button type="submit">Send</button>
            </form>
        </div>
        <div class="col-md-6">
            <img src="~/images/2250206.png" alt="Send Request" class="img-fluid send-request-image">
        </div>
    </div>
</div>
